
@{
    ViewBag.Title = "Assign Users";
}

<h2>AssignUsers</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.Hidden("projectId", (int)ViewBag.ProjectId)

        <div class="form-group">
            @Html.Label("User List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("AssignedUsers", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("AssignedUsers", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
