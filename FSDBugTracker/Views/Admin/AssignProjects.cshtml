
@{
    ViewBag.Title = "Assign Projects";
}

<h2>Assign Projects</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Roles</h4>
        <hr />
        @Html.Hidden("userId", (string)ViewBag.UserId)
        <div class="form-group">
            @Html.Label("Select Project(s)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("Projects", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Projects", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
}
