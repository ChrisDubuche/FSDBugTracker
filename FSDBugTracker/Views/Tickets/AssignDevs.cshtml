
@{
    ViewBag.Title = "AssignDevs";
}

<h2>AssignDevs</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Hidden("TicketId",(int)ViewBag.TicketId)
    
    <div class="form-group">
        @Html.Label("User List", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AssignedDevs", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessage("AssignedDevs", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
